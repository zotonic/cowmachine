%%-*- mode: erlang -*-

{require_min_otp_vsn, "22.3"}.

{plugins, [rebar3_hex]}.

{deps, [
    {zotonic_stdlib, "1.5.10"},
    {cowboy, "2.9.0"}
]}.

{profiles, [
    {test, [
        {xref_checks, [
            undefined_function_calls,
            locals_not_used,
            deprecated_function_calls
        ]},

        {xref_ignores, [
        ]},

        {dialyzer, [
          {warnings, [
              no_return
          ]}
        ]}
    ]}
]}.
